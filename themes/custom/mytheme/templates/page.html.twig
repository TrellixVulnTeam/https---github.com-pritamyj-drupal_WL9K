<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
</head>

<body>
{{ attach_library('mytheme/navbar') }}

    <header class="header"> 
    <button class="hamburger" id="hamburger" onclick="myFunction()">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span></button>
        {{ page.header }} 
        <nav class="menu">
          
            {{ page.menu }}  
        </nav> 
        <div class="heading"> 
            <h1>{{ site_name }}</h1> 
        </div> 
    </header> 

    <main class="main"> 

        {% if page.sidebar_left %}
        <div class="sidebar_left"> 
            {{ page.sidebar_left }}
        </div> 
        {% endif %} 

        <div class="content">
            {{ page.content }}
        </div> 

        {% if page.sidebar_right %}
        <div class="sidebar_right"> 
            {{ page.sidebar_right }}
        </div> 
        {% endif %} 
        
    </main>

    <footer aria-label="Site footer" class="footer" id="footer" role="contentinfo">
   <div class="footer--top">
     {{ page.footer_first }}
     {{ page.footer_second }}
     {{ page.footer_third }}
   </div>
   <div class="footer--bottom">
       {{ page.footer_bottom }}
   </div>
</footer>

</body>

</html>
